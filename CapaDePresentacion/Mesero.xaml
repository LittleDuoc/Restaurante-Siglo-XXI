    <Grid>
        <TabControl>
            <TabItem Header="Estado de mesa">
                <Grid Background="#FFE5E5E5" Margin="0,0,81,0" Height="553">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1156*"/>
                        <ColumnDefinition Width="123*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="Limpiar_mesa" Content="Limpiar mesa" HorizontalAlignment="Left" Margin="85,382,0,0" VerticalAlignment="Top" Height="45" Width="118" Click="Limpiar_mesa_Click"/>
