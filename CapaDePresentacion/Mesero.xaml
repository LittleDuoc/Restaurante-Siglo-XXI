                    <Rectangle HorizontalAlignment="Left" Height="280" Margin="298,58,0,0" Stroke="Black" VerticalAlignment="Top" Width="208"/>
                    <Rectangle HorizontalAlignment="Left" Height="280" Margin="568,58,0,0" Stroke="Black" VerticalAlignment="Top" Width="208"/>
